<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/len_12"
    android:background="@drawable/bg_wihte"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/len_16"
        android:layout_marginTop="@dimen/len_14"
        android:layout_marginRight="@dimen/len_16"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_interrogation_number"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_inquiry_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_top"
        android:layout_marginTop="@dimen/len_10"
        android:layout_marginBottom="@dimen/len_20"
        android:background="@color/bgColor4" />

    <LinearLayout
        android:id="@+id/ll_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/len_8"
                android:layout_weight="3"
                android:gravity="right"
                android:text="@string/label_member"
                android:textColor="@color/textColor11" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="left|bottom"
                android:textColor="@color/textColor1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/len_8"
                android:layout_marginTop="@dimen/len_8"
                android:layout_weight="3"
                android:gravity="right"
                android:text="@string/label_medical_record_num"
                android:textColor="@color/textColor11" />

            <TextView
                android:id="@+id/tv_medical_record_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/len_8"
                android:layout_weight="7"
                android:gravity="left|bottom"
                android:textColor="@color/textColor1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/len_8"
                android:layout_marginTop="@dimen/len_8"
                android:layout_weight="3"
                android:gravity="right"
                android:text="@string/label_doctor_name"
                android:textColor="@color/textColor11" />

            <TextView
                android:id="@+id/tv_doctor_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/len_8"
                android:layout_weight="7"
                android:baselineAligned="false"
                android:gravity="left|bottom"
                android:textColor="@color/textColor1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/len_8"
                android:layout_marginTop="@dimen/len_8"
                android:layout_weight="3"
                android:gravity="right"
                android:text="@string/tips_administrative_office"
                android:textColor="@color/textColor11" />

            <TextView
                android:id="@+id/tv_division"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/len_8"
                android:layout_weight="7"
                android:gravity="left|bottom"
                android:textColor="@color/textColor1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/len_8"
                android:layout_marginTop="@dimen/len_8"
                android:layout_weight="3"
                android:gravity="right"
                android:text="@string/tips_tentative_diagnosis"
                android:textColor="@color/textColor11" />

            <TextView
                android:id="@+id/tv_tentative_diagnosis"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/len_8"
                android:layout_weight="7"
                android:gravity="left|bottom"
                android:textColor="@color/textColor1" />

        </LinearLayout>

    </LinearLayout>



    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_center"
        android:layout_marginTop="@dimen/len_28"
        android:background="@color/bgColor4" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:layout_marginTop="@dimen/len_14"
        android:layout_marginBottom="@dimen/len_14"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_look_inquiry_report"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/len_24"
            android:layout_marginRight="@dimen/len_24"
            android:background="@drawable/btn_oder5"
            android:gravity="center"
            android:text="@string/label_look_detail"
            android:textColor="@color/textColor3"
            android:textSize="@dimen/font_16" />
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/len_72"
        android:layout_height="@dimen/len_72"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/len_28"
        android:src="@mipmap/icon_loss_effect" />

</RelativeLayout>