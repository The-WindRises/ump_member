<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_24"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_circle_blue" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/len_116"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-4dp"
            android:background="@color/textColor11" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor5"
            android:textSize="@dimen/font_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_12"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="left"
                        android:text="@string/tips_height"
                        android:textColor="@color/textColor7"
                        android:textSize="@dimen/font_12" />

                    <TextView
                        android:id="@+id/tv_user_height"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/len_6"
                        android:layout_weight="2"
                        android:gravity="left"
                        android:textColor="@color/textColor7"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/len_4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="left"
                        android:text="@string/tips_animal_heat"
                        android:textColor="@color/textColor7"
                        android:textSize="@dimen/font_12" />

                    <TextView
                        android:id="@+id/tv_animal_heat"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/len_6"
                        android:layout_weight="2"
                        android:gravity="left|bottom"
                        android:textColor="@color/textColor7"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/len_4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="left"
                        android:text="@string/tips_blood_pressure"
                        android:textColor="@color/textColor7"
                        android:textSize="@dimen/font_12" />

                    <TextView
                        android:id="@+id/tv_blood_pressure"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/len_6"
                        android:layout_weight="2"
                        android:gravity="left|bottom"
                        android:textColor="@color/textColor7"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/len_6"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="left"
                        android:text="@string/tips_weight"
                        android:textColor="@color/textColor7"
                        android:textSize="@dimen/font_12" />

                    <TextView
                        android:id="@+id/tv_user_wight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/len_6"
                        android:layout_weight="2"
                        android:gravity="left"
                        android:textColor="@color/textColor7"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/len_4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="left"
                        android:text="@string/tips_blood_glucose"
                        android:textColor="@color/textColor7"
                        android:textSize="@dimen/font_12" />

                    <TextView
                        android:id="@+id/tv_blood_glucose"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/len_6"
                        android:layout_weight="2"
                        android:gravity="left|bottom"
                        android:textColor="@color/textColor7"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/len_4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="left"
                        android:text="@string/tips_pulse"
                        android:textColor="@color/textColor7"
                        android:textSize="@dimen/font_12" />

                    <TextView
                        android:id="@+id/tv_user_pulse"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/len_6"
                        android:layout_weight="2"
                        android:gravity="left|bottom"
                        android:textColor="@color/textColor7"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="@string/tips_head_circumference"
                android:textColor="@color/textColor7"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/tv_head_circumference"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/len_6"
                android:gravity="left"
                android:textColor="@color/textColor7"
                android:textSize="@dimen/font_12" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>