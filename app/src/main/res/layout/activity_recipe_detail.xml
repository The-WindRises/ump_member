<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor1"
    android:orientation="vertical"
    tools:context=".ui.activity.recipe.RecipeDetailActivity">

    <include layout="@layout/common_top1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/len_116"
                        android:background="@color/btn_color1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/len_32"
                            android:layout_marginTop="@dimen/len_24"
                            android:drawableRight="@drawable/icon_sex"
                            android:drawablePadding="@dimen/len_10"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_16" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/len_32"
                            android:layout_marginTop="@dimen/len_16"
                            android:layout_marginRight="@dimen/len_32"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_age"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_14" />

                            <TextView
                                android:id="@+id/tv_user_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_14" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_marital_status"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_14" />

                            <TextView
                                android:id="@+id/tv_marital_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_14" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/len_32"
                            android:layout_marginTop="@dimen/len_6"
                            android:layout_marginRight="@dimen/len_32"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_birth"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_14" />

                            <TextView
                                android:id="@+id/tv_user_birth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_14" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_weight"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_14" />

                            <TextView
                                android:id="@+id/tv_user_wight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_14" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/len_12"
                        android:background="@drawable/bg_wihte"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/len_20"
                        android:paddingBottom="@dimen/len_32">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/font_18"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="@string/label_interrogation_number"
                                    android:minWidth="30dp"
                                    android:textColor="@color/textColor3"
                                    android:textSize="@dimen/font_14" />

                                <TextView
                                    android:id="@+id/tv_inquiry_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@color/textColor1"
                                    android:textSize="@dimen/font_14" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="@string/medical_record_no"
                                    android:minWidth="30dp"
                                    android:textColor="@color/textColor3"
                                    android:textSize="@dimen/font_14" />

                                <TextView
                                    android:id="@+id/tv_inquiry_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColor1"
                                    android:textSize="@dimen/font_14" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_inquiry_time"
                                    android:minWidth="30dp"
                                    android:textColor="@color/textColor3"
                                    android:textSize="@dimen/font_14" />

                                <TextView
                                    android:id="@+id/tv_inquiry_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColor1"
                                    android:textSize="@dimen/font_14" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_period_of_validity"
                                    android:minWidth="30dp"
                                    android:textColor="@color/textColor3"
                                    android:textSize="@dimen/font_14" />

                                <TextView
                                    android:id="@+id/tv_useful_life"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColor1"
                                    android:textSize="@dimen/font_14" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/label_doctor_name"
                                    android:minWidth="30dp"
                                    android:textColor="@color/textColor3"
                                    android:textSize="@dimen/font_14" />
                                <TextView
                                    android:id="@+id/tv_inquiry_doctor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColor1"
                                    android:textSize="@dimen/font_14" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tips_allergic_history"
                                    android:minWidth="30dp"
                                    android:textColor="@color/textColor3"
                                    android:textSize="@dimen/font_14" />

                                <TextView
                                    android:id="@+id/tv_allergic_history"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColor1"
                                    android:textSize="@dimen/font_14" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tips_tentative_diagnosis"
                                    android:minWidth="30dp"
                                    android:textColor="@color/textColor3"
                                    android:textSize="@dimen/font_14" />

                                <TextView
                                    android:id="@+id/tv_tentative_diagnosis"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/textColor1"
                                    android:textSize="@dimen/font_14" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_recipe_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/font_12"
                        android:background="@drawable/bg_wihte"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/len_20"
                            android:layout_marginTop="@dimen/len_14"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_doctor_prescription"
                                android:textColor="@color/textColor7" />

                            <TextView
                                android:id="@+id/tv_recipe_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColor10"
                                android:textSize="@dimen/font_12" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/len_10"
                            android:background="@color/grey_300" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcv_inquiry_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/len_12"
                            android:layout_marginBottom="@dimen/len_14" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/len_20"
                            android:layout_marginTop="@dimen/len_14"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/label_prescription_instructions"
                                android:textColor="@color/textColor7" />

                            <TextView
                                android:id="@+id/tv_recipe_desc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/len_8"
                                android:minHeight="@dimen/len_40" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300" />

            <LinearLayout
                android:id="@+id/ll_pay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_60"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/ll_check_all"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:visibility="visible">

                    <ImageView
                        android:id="@id/iv_check_all"
                        android:layout_width="@dimen/len_20"
                        android:layout_height="@dimen/len_20"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/len_32"
                        android:src="@drawable/btn_check" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/len_4"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:text="@string/label_select_all"
                        android:textColor="@color/textColor1"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="12"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:text="@string/msg_total"
                        android:textColor="@color/textColor1"
                        android:textSize="@dimen/font_16" />

                    <TextView
                        android:id="@+id/tv_price_all"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:text="ï¿¥0.0"
                        android:textColor="@color/textColor2"
                        android:textSize="@dimen/font_16" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_inquiry_submit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:background="@color/btn_color4"
                    android:gravity="center"
                    android:text="@string/label_confirm_pay"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16" />

            </LinearLayout>

        </LinearLayout>

        <it.swiftelink.com.common.widget.stateview.StateView
            android:id="@+id/stateView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>