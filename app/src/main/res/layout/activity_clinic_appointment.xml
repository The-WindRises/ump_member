<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.appointment.ClinicAppointmentActivity">

    <include layout="@layout/common_top2" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_appointment" />

        <LinearLayout
            android:id="@+id/ll_to_call"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_48"
            android:layout_alignParentBottom="true"
            android:background="@color/btn_color1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_call" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/len_6"
                android:text="400-680-8069"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>