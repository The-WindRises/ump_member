<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="@dimen/len_16"
        android:layout_marginRight="@dimen/len_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor7"
            android:textSize="@dimen/font_16" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_doctor_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor2"
            android:textSize="@dimen/font_16" />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/rb_doctor_grade"
            style="@style/RadingStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/font_18"
            android:max="5"
            android:isIndicator="true"
            android:stepSize="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_evaluate_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="@dimen/len_20"
        android:layout_marginTop="@dimen/len_16"
        android:textSize="@dimen/font_16"
        android:textColor="@color/textColor6"/>

    <TextView
        android:id="@+id/tv_evaluate_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="@dimen/len_14"
        android:layout_marginRight="@dimen/len_20"
        android:textColor="@color/textColor11"
        android:textSize="@dimen/font_12" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bgColor2"
        android:layout_marginTop="@dimen/len_14"/>
</LinearLayout>