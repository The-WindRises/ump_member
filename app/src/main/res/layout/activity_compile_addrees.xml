<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.user.CompileAddressActivity">

    <include layout="@layout/common_top2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_44"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="@dimen/len_72"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="@dimen/len_16"
                    android:text="@string/label_address_name"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/font_16" />


                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="right"
                    android:inputType="textMultiLine"
                    android:textCursorDrawable="@drawable/bg_et_cursor"
                    android:layout_marginLeft="@dimen/len_16"
                    android:layout_weight="1"
                    android:hint="@string/label_please_input_name"
                    android:layout_marginRight="@dimen/len_16"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_16"
                    android:layout_weight="1"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_44"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="@dimen/len_72"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_16"
                    android:gravity="right"
                    android:text="@string/label_phone_num"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/font_16" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_16"
                    android:layout_weight="1"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="right"
                    android:inputType="phone"
                    android:textCursorDrawable="@drawable/bg_et_cursor"
                    android:hint="@string/please_input_phone"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_select_phone_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/len_16"
                    android:paddingLeft="@dimen/len_12"
                    android:drawableRight="@mipmap/icon_enter"
                    android:text="+86" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_44"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="@dimen/len_72"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_16"
                    android:gravity="right"
                    android:text="@string/label_area"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/tv_district"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_16"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textSize="@dimen/font_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/len_16"
                    android:src="@mipmap/icon_enter" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_44"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="@dimen/len_72"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="@dimen/len_16"
                    android:text="@string/label_detailed_address"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/font_16" />

                <EditText
                    android:id="@+id/et_address_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_16"
                    android:layout_marginRight="@dimen/len_16"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/please_input_detail_address"
                    android:textSize="@dimen/font_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300" />

            <Button
                android:id="@+id/btn_save_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_52"
                android:layout_marginLeft="@dimen/len_24"
                android:layout_marginTop="@dimen/len_116"
                android:layout_marginRight="@dimen/len_24"
                android:background="@drawable/btn_login"
                android:text="@string/label_save"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16" />

            <Button
                android:id="@+id/btn_delete_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/len_24"
                android:layout_marginTop="@dimen/len_12"
                android:layout_marginRight="@dimen/len_24"
                android:background="@drawable/btn_rigster"
                android:text="@string/label_delete_address"
                android:textColor="@color/textColor1"
                android:textSize="@dimen/font_16" />
        </LinearLayout>

        <it.swiftelink.com.common.widget.stateview.StateView
            android:id="@+id/stateView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</LinearLayout>