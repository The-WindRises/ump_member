<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_12"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_set_meal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor7" />

                <TextView
                    android:id="@+id/tv_set_seal_type"
                    android:layout_width="@dimen/len_44"
                    android:layout_height="@dimen/len_14"
                    android:layout_marginLeft="@dimen/len_4"
                    android:background="@mipmap/icon_btn_blue"
                    android:gravity="center"
                    android:textColor="@color/blue_400"
                    android:textSize="@dimen/font_10"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_set_meal_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor6"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/tv_effect_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_12"
                android:drawableLeft="@mipmap/icon_time"
                android:drawablePadding="@dimen/len_4"
                android:textColor="@color/textColor2"
                android:textSize="@dimen/font_10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/len_12"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_discount_price"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_discountPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_old_price"
                    android:textColor="@color/hintColor1"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/len_6"
                    android:textColor="@color/hintColor1"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_buy_set_meal"
                android:layout_width="50dp"
                android:layout_height="@dimen/len_20"
                android:layout_marginTop="@dimen/len_8"
                android:background="@drawable/rect_round_circle_red"
                android:gravity="center"
                android:text="@string/lebel_buy"
                android:textColor="@color/textColor2"
                android:textSize="@dimen/font_12" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300" />

</LinearLayout>