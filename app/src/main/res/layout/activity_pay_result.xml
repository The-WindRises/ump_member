<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.order.PayResultActivity">

    <include layout="@layout/common_top2" />

    <ImageView
        android:id="@+id/iv_pay_result"
        android:layout_width="@dimen/len_84"
        android:layout_height="@dimen/len_84"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/len_128" />

    <TextView
        android:id="@+id/tv_pay_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/font_18"
        android:textColor="@color/textColor7"
        android:textSize="@dimen/font_18" />

    <TextView
        android:id="@+id/tv_pay_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/len_16"
        android:textColor="@color/textColor8"
        android:textSize="@dimen/font_16" />

    <Button
        android:id="@+id/btn_back_to_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_44"
        android:layout_marginLeft="@dimen/len_20"
        android:layout_marginTop="@dimen/len_36"
        android:layout_marginRight="@dimen/len_20"
        android:background="@drawable/btn_login"
        android:text="@string/label_back_to_the_next_level"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16" />

</LinearLayout>