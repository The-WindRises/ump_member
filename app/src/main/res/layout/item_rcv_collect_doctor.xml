<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_28"
        android:layout_marginTop="@dimen/len_24"
        android:layout_marginRight="@dimen/len_20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_doctor_header"
            android:layout_width="@dimen/len_60"
            android:layout_height="@dimen/len_60"
            android:src="@mipmap/icon_dc_man" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_12"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/font_18" />

                <TextView
                    android:id="@+id/tv_doctor_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/len_10"
                    android:textColor="@color/textColor11"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_14"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_doctor_division"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor6"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_doctor_hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_10"
                    android:textColor="@color/textColor6"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_doctor_desc"
                    android:textColor="@color/textColor6"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/tv_doctor_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_10"
                    android:textColor="@color/textColor6"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_16"
                android:layout_marginBottom="@dimen/len_16"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_doctor_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor2"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/font_16" />

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/rb_doctor_grade"
                    style="@style/RadingStyle"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/font_18"
                    android:stepSize="1"
                    android:isIndicator="true"
                    android:max="5" />
            </LinearLayout>
            <TextView
                android:id="@+id/doctor_practice_year_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_bg"
                android:textSize="11sp"
                android:textColor="#94D60A"
                android:paddingStart="11dp"
                android:paddingEnd="11dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                tools:text="从业12年"/>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/len_20"
        android:background="@color/bgColor2" />
</LinearLayout>