<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.health.EditImageDataActivity">

    <include layout="@layout/common_top2" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/len_16"
                    android:paddingRight="@dimen/len_16">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/len_16"
                        android:paddingBottom="@dimen/len_14">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_examination_name"
                            android:textColor="@color/textColor6"
                            android:textSize="@dimen/font_14" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <EditText
                            android:id="@+id/et_examination_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:cursorVisible="true"
                            android:hint="@string/please_input_examination_name"
                            android:inputType="text|textMultiLine"
                            android:textColor="@color/textColor1"
                            android:gravity="right"
                            android:textCursorDrawable="@drawable/bg_et_cursor"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/bgColor4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/len_16"
                        android:paddingBottom="@dimen/len_14">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_medical_institutions"
                            android:textColor="@color/textColor6"
                            android:textSize="@dimen/font_14" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <EditText
                            android:id="@+id/et_examination_organization"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:cursorVisible="true"
                            android:hint="@string/msg_input_medical_institutions"
                            android:inputType="text|textMultiLine"
                            android:gravity="right"
                            android:textColor="@color/textColor1"
                            android:textCursorDrawable="@drawable/bg_et_cursor"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/bgColor4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/len_10"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/len_16"
                    android:paddingRight="@dimen/len_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/len_16"
                        android:text="@string/label_examination_finding"
                        android:textColor="@color/textColor1"
                        android:textSize="@dimen/font_14" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/len_10"
                        android:background="@color/bgColor4" />

                    <EditText
                        android:id="@+id/tv_examination_look"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:gravity="top"
                        android:hint="@string/tips_input_examination_finding"
                        android:minHeight="@dimen/len_64"
                        android:textCursorDrawable="@drawable/bg_et_cursor"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/len_10"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/len_16"
                    android:paddingRight="@dimen/len_16">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/len_16"
                            android:text="@string/label_examin_pic"
                            android:textColor="@color/textColor1"
                            android:textSize="@dimen/font_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/len_6"
                            android:layout_marginTop="@dimen/len_16"
                            android:text="@string/tips_plase_keep_the_picture_clear"
                            android:textColor="@color/textColor4"
                            android:textSize="@dimen/font_12" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/len_10"
                        android:background="@color/bgColor4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/len_16"
                        android:paddingBottom="@dimen/len_14">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/label_update_pic"
                            android:textColor="@color/textColor1"
                            android:textSize="@dimen/font_14" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/len_48"
                            android:layout_marginRight="@dimen/len_12"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/select_image1"
                                android:layout_width="@dimen/len_40"
                                android:layout_height="@dimen/len_40"
                                android:layout_gravity="center_vertical"
                                android:src="@mipmap/icon_upload_image" />

                            <ImageView
                                android:id="@+id/select_image2"
                                android:layout_width="@dimen/len_40"
                                android:layout_height="@dimen/len_40"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/len_12"
                                android:src="@mipmap/icon_upload_image"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/select_image3"
                                android:layout_width="@dimen/len_40"
                                android:layout_height="@dimen/len_40"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/len_12"
                                android:src="@mipmap/icon_upload_image"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/select_image4"
                                android:layout_width="@dimen/len_40"
                                android:layout_height="@dimen/len_40"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/len_12"
                                android:src="@mipmap/icon_upload_image"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/select_image5"
                                android:layout_width="@dimen/len_40"
                                android:layout_height="@dimen/len_40"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/len_12"
                                android:src="@mipmap/icon_upload_image"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/len_44"
                    android:layout_marginLeft="@dimen/len_28"
                    android:layout_marginTop="@dimen/len_52"
                    android:layout_marginRight="@dimen/len_28"
                    android:layout_marginBottom="@dimen/len_100"
                    android:background="@drawable/btn_login"
                    android:text="@string/label_save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16" />
            </LinearLayout>
        </ScrollView>

        <it.swiftelink.com.common.widget.stateview.StateView
            android:id="@+id/stateView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</LinearLayout>