<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="11dp"
    android:background="@color/transparent">
<RelativeLayout
    android:id="@+id/coupon_item_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/ic_coupon_item_bg1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="15dp">
        <LinearLayout
            android:id="@+id/coupon_item_price_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
      >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/money_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor15"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:text="@string/money_tag_str"/>
        <TextView
            android:id="@+id/money_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor15"
            android:textSize="36sp"
            android:singleLine="true"
            tools:text="68"/>
        </LinearLayout>
            <TextView
                android:id="@+id/coupon_remark_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="满720元可用"
                android:singleLine="true"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/textColor6"/>

        </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_coupon_item_line"
        android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="15dp">
                <ImageView
                    android:id="@+id/coupon_icon_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_coupon_item_img"/>
                <TextView
                    android:id="@+id/coupon_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/textColor6"
                    android:layout_marginStart="4dp"
                    android:singleLine="true"
                    tools:text="健康体验劵"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/expiration_dec_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/textColor7"
                    android:text="@string/expiration_date_str"/>
                <TextView
                    android:id="@+id/expiration_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/textColor7"
                    android:layout_marginStart="6dp"
                    tools:text="2019-11-30"
                   />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginTop="6dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_description"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/coupon_tip_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/textColor19"
                    android:layout_marginStart="4dp"
                    android:text="@string/indicator_used_tip_str"
                    android:padding="5dp"/>
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5">
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="@string/coupon_use_str"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
<!--        android:layout_alignParentEnd="true"-->
<!--        android:layout_centerVertical="true"-->
    </LinearLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">
        <ImageView
            android:id="@+id/coupon_status_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_coupon_used"
            android:layout_marginStart="120dp"
            android:layout_marginBottom="15dp"
            android:visibility="gone"
            />
        </FrameLayout>
</RelativeLayout>
</LinearLayout>

