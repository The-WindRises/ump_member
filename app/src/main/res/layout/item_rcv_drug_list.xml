<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_16"
        android:layout_marginTop="@dimen/len_10"
        android:layout_marginRight="@dimen/len_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_drug_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="left|bottom"
            android:textColor="@color/textColor6"
            android:textSize="@dimen/font_14" />



        <TextView
            android:id="@+id/tv_order_goods_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|bottom"
            android:layout_marginLeft="@dimen/len_10"
            android:textColor="@color/textColor6"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_order_goods_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="right|bottom"
            android:layout_marginLeft="@dimen/len_8"
            android:textColor="@color/textColor6"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

</LinearLayout>