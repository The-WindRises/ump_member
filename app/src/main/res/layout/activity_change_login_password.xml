<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.account.ChangeLoginPasswordActivity">

    <include layout="@layout/common_top1"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_24"
                    android:text="@string/please_input_old_psd"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/font_14" />

                <EditText
                    android:id="@+id/et_old_psd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_24"
                    android:layout_marginTop="@dimen/len_10"
                    android:layout_marginRight="@dimen/len_24"
                    android:background="@drawable/bg_input"
                    android:hint="@string/please_input_old_psd"
                    android:cursorVisible="true"
                    android:inputType="textPassword|textMultiLine"
                    android:textCursorDrawable="@drawable/bg_et_cursor"
                    android:textSize="@dimen/font_14" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_24"
                    android:text="@string/label_new_psd"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/font_14" />

                <EditText
                    android:id="@+id/et_new_psd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_24"
                    android:layout_marginTop="@dimen/len_10"
                    android:layout_marginRight="@dimen/len_24"
                    android:background="@drawable/bg_input"
                    android:hint="@string/label_input_new_psd"
                    android:inputType="textPassword|textMultiLine"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@drawable/bg_et_cursor"
                    android:textSize="@dimen/font_14" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_24"
                    android:text="@string/please_confirm_psd"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/font_14" />

                <EditText
                    android:id="@+id/et_confirm_psd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_24"
                    android:layout_marginTop="@dimen/len_10"
                    android:layout_marginRight="@dimen/len_24"
                    android:background="@drawable/bg_input"
                    android:hint="@string/label_please_input_new_psd_again"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@drawable/bg_et_cursor"
                    android:inputType="textPassword"
                    android:textSize="@dimen/font_14" />

            </LinearLayout>

            <Button

                android:id="@+id/confirm_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_44"
                android:layout_marginLeft="@dimen/len_24"
                android:layout_marginTop="@dimen/len_32"
                android:layout_marginRight="@dimen/len_24"
                android:background="@drawable/btn_login"
                android:textSize="@dimen/font_16"
                android:text="@string/confirm"
                android:textColor="@color/white" />

        </LinearLayout>
        <it.swiftelink.com.common.widget.stateview.StateView
            android:id="@+id/stateView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</LinearLayout>