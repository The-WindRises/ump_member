<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/len_12"
    android:layout_marginTop="@dimen/len_12"
    android:layout_marginRight="@dimen/len_12"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/len_16"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_doctor_header"
            android:layout_width="@dimen/len_48"
            android:layout_height="@dimen/len_48" />

        <TextView
            android:id="@+id/tv_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/len_10"
            android:textColor="@color/textColor1"
            android:textSize="@dimen/font_16" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_report_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/textColor11"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bgColor4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_8"
            android:layout_weight="3"
            android:gravity="right"
            android:text="@string/label_order_num"
            android:textColor="@color/textColor11" />

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:layout_weight="7"
            android:textColor="@color/textColor1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_8"
            android:layout_marginTop="@dimen/len_8"
            android:layout_weight="3"
            android:gravity="right"
            android:text="@string/label_member"
            android:textColor="@color/textColor11" />


        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:layout_marginTop="@dimen/len_8"
            android:layout_weight="7"
            android:textColor="@color/textColor1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_8"
            android:layout_marginTop="@dimen/len_8"
            android:layout_weight="3"
            android:gravity="right"
            android:text="@string/label_symptom_descriptions"
            android:textColor="@color/textColor11" />

        <TextView
            android:id="@+id/tv_symptom_descriptions"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:layout_marginTop="@dimen/len_8"
            android:layout_weight="7"
            android:textColor="@color/textColor1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_8"
            android:layout_marginTop="@dimen/len_8"
            android:layout_weight="3"
            android:gravity="right"
            android:text="@string/label_preliminary_judgment"
            android:textColor="@color/textColor11" />

        <TextView
            android:id="@+id/tv_tentative_diagnosis"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:layout_marginTop="@dimen/len_8"
            android:layout_weight="7"
            android:textColor="@color/textColor1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/len_28"
        android:background="@color/bgColor4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_14"
        android:layout_marginBottom="@dimen/len_14"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_look_recipe"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/btn_oder3"
            android:gravity="center"
            android:paddingLeft="@dimen/len_10"
            android:paddingRight="@dimen/len_10"
            android:text="@string/look_prescription"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/tv_look_inquiry_report"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/len_24"
            android:layout_marginRight="@dimen/len_24"
            android:background="@drawable/btn_oder4"
            android:gravity="center"
            android:text="@string/label_look_detail"
            android:textColor="@color/btn_color1"
            android:textSize="@dimen/font_16" />
    </LinearLayout>
</LinearLayout>