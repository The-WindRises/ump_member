<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.account.SetPayPsdActivity">

    <include layout="@layout/common_top1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/len_28"
                android:layout_marginTop="@dimen/len_32"
                android:layout_marginRight="@dimen/len_28"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/len_14"
                    android:layout_height="@dimen/len_14"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_phone" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/len_10"
                    android:layout_marginRight="@dimen/len_28"
                    android:layout_weight="1"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:hint="@string/please_input_phone"
                    android:inputType="phone"
                    android:textColorHint="@color/hintColor1"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/font_14" />

                <LinearLayout
                    android:id="@+id/ll_phone_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/len_20"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_phone_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="+86"
                        android:textColor="@color/hintColor1"
                        android:textSize="@dimen/font_14" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/len_10"
                        android:src="@mipmap/icon_right" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/len_28"
                android:layout_marginTop="@dimen/len_10"
                android:layout_marginRight="@dimen/len_28"
                android:background="@color/lineColor1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/len_28"
                android:layout_marginTop="@dimen/len_28"
                android:layout_marginRight="@dimen/len_28"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/len_14"
                    android:layout_height="@dimen/len_14"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/iocn_psd" />

                <EditText
                    android:id="@+id/et_verification_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/len_10"
                    android:layout_marginRight="@dimen/len_28"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/please_input_verifycode"
                    android:inputType="number"
                    android:textColorHint="@color/hintColor1"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_get_verification_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_get_code"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/len_28"
                android:layout_marginTop="@dimen/len_10"
                android:layout_marginRight="@dimen/len_28"
                android:background="@color/lineColor1" />

            <LinearLayout
                android:id="@+id/ll_phone_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/len_28"
                android:layout_marginTop="@dimen/len_14"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_code_has_been_sent_to"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/tv_phone_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/len_28"
                android:layout_marginTop="@dimen/len_32"
                android:layout_marginRight="@dimen/len_28">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/textColor4" />

                <EditText
                    android:id="@+id/et_input_psd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/len_10"
                    android:layout_marginRight="@dimen/len_28"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/label_please_input_psd"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:textColorHint="@color/hintColor1"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/len_28"
                android:layout_marginTop="@dimen/len_10"
                android:layout_marginRight="@dimen/len_28"
                android:background="@color/lineColor1" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_48"
                android:layout_marginLeft="@dimen/len_28"
                android:layout_marginTop="@dimen/len_64"
                android:layout_marginRight="@dimen/len_28"
                android:background="@drawable/btn_login"
                android:text="@string/label_complete"
                android:textColor="@color/white"
                android:textSize="@dimen/font_18" />
        </LinearLayout>

        <it.swiftelink.com.common.widget.stateview.StateView
            android:id="@+id/stateView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>
</LinearLayout>