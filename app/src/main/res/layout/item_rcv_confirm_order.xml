<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bgColor1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_28"
        android:layout_marginTop="@dimen/font_18"
        android:layout_marginRight="@dimen/len_36"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_drag_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor1"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tips_unit_price"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/font_14" />
        <TextView
            android:id="@+id/tv_price_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_28"
        android:layout_marginTop="@dimen/len_20"
        android:layout_marginRight="@dimen/len_36"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_specification"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tv_drug_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/font_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_20"
            android:text="@string/label_unit"
            android:visibility="gone"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/font_12" />
        <TextView
            android:id="@+id/tv_drug_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/font_12" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_drug_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_28"
        android:layout_marginTop="@dimen/len_20"
        android:layout_marginRight="@dimen/len_36"
        android:layout_marginBottom="@dimen/len_16"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_drug_num_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor8"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tv_price_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_16"
            android:textColor="@color/textColor2"
            android:textSize="@dimen/font_14" />
    </LinearLayout>
</LinearLayout>