<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/len_16"
    android:layout_marginTop="@dimen/len_16"
    android:layout_marginRight="@dimen/len_16"
    android:background="@drawable/bg_wihte"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/font_18"
        android:paddingTop="@dimen/len_14"
        android:paddingRight="@dimen/font_18"
        android:paddingBottom="@dimen/len_14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_order_num"
            android:textColor="@color/textColor1" />

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor1" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor2" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/len_16"
        android:background="@color/lineColor1" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_drug_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_16"
        android:layout_marginTop="@dimen/len_20"
        android:layout_marginRight="@dimen/len_16"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_freight" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_free_shipping_after_100"
            android:textColor="@color/textColor10"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_express_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_16"
        android:layout_marginTop="@dimen/len_8"
        android:layout_marginRight="@dimen/len_16"
        android:layout_marginBottom="@dimen/len_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="left|bottom"
            android:textColor="@color/textColor6"
            android:textSize="@dimen/font_14" />


        <TextView
            android:id="@+id/tv_order_goods_amount_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="right|bottom"
            android:textColor="@color/textColor6"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_order_price_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="right|bottom"
            android:textColor="@color/textColor7"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor1" />

    <LinearLayout
        android:id="@+id/ll_order_handle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_14"
        android:layout_marginRight="@dimen/font_18"
        android:layout_marginBottom="@dimen/len_16"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_order_to_pay"
            android:layout_width="@dimen/len_84"
            android:layout_height="@dimen/len_32"
            android:layout_gravity="right"
            android:background="@drawable/btn_oder1"
            android:gravity="center"
            android:text="@string/label_pay_money"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/tv_order_cancel"
            android:layout_width="@dimen/len_84"
            android:layout_height="@dimen/len_32"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/len_12"
            android:background="@drawable/btn_oder1"
            android:gravity="center"
            android:text="@string/label_order_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/tv_confirm_received"
            android:layout_width="@dimen/len_84"
            android:layout_height="@dimen/len_32"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/len_12"
            android:background="@drawable/btn_oder1"
            android:gravity="center"
            android:text="@string/label_to_order_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/tv_look_logistics"
            android:layout_width="@dimen/len_84"
            android:layout_height="@dimen/len_32"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/len_12"
            android:background="@drawable/btn_oder1"
            android:gravity="center"
            android:text="@string/label_look_logistics"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16" />
    </LinearLayout>
</LinearLayout>